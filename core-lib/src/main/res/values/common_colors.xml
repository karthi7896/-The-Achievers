<!--
    Application specific colors. Primary palette is "Blue Grey"

    https://material.google.com/style/color.html#color-color-palette
-->
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="UnusedResources">

    <!--
        Palette color from http://paletton.com/
    -->
    <color name="palette_primary1">#37474F</color>
    <color name="palette_primary2">#6B7B83</color>
    <color name="palette_primary3">#4E6068</color>
    <color name="palette_primary4">#202F36</color>
    <color name="palette_primary5">#132731</color>

    <color name="palette_secondary1">#3E4156</color>
    <color name="palette_secondary2">#777A8E</color>
    <color name="palette_secondary3">#575A71</color>
    <color name="palette_secondary4">#25273B</color>
    <color name="palette_secondary5">#181B36</color>

    <color name="palette_secondary_composite1">#3D5949</color>
    <color name="palette_secondary_composite2">#789384</color>
    <color name="palette_secondary_composite3">#567564</color>
    <color name="palette_secondary_composite4">#223D2E</color>
    <color name="palette_secondary_composite5">#143723</color>
    <color name="news_source_item_highlight">#0AFFFFFF</color>

    <!--
        Application primary color
    -->
    <color name="colorPrimary">@color/palette_primary1</color>
    <color name="colorPrimaryDark">@color/palette_secondary1</color>
    <color name="colorAccent">@color/palette_secondary_composite1</color>

    <!--
        Generic colors
    -->
    <color name="soft_opaque">#30000000</color>
    <color name="img_soft_opaque">#30FF0000</color>
    <color name="img_full_opaque">#00000000</color>
    <color name="black_opaque">#AA000000</color>

    <color name="white">#FFFFFF</color>
    <color name="card_headline_text">#DDFFFFFF</color>
    <color name="orange_transparent">#AAFADCA7</color>
    <color name="progress_indicator_tint">#00796B</color>
    <color name="vector_icon_fill_color">#AAE0E0E0</color>
    <color name="feed_bookmark_tint">#41ff41</color>

    <!-- Navigation Sidebar on Headline Browser -->
    <color name="fastlane_background">#37474F</color>
    <color name="app_title_color">#90A4AE</color>

    <color name="background_gradient_start">#263238</color>
    <color name="background_gradient_end">#D7E7DF</color>
    <color name="search_opaque">@color/palette_secondary2</color>
    <color name="selected_background">@color/palette_secondary4</color>
    <color name="detail_background">#0096a6</color>

    <color name="default_background">#3d3d3d</color>

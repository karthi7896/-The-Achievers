<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.hossainkhan.dailynewsheadlines">

    <application
        android:name="info.hossainkhan.android.core.CoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity-alias
            android:name=".Launcher"
            android:label="@string/app_name"
            android:targetActivity=".launcher.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".launcher.LauncherActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".onboarding.OnboardingActivity"
            android:label="@string/title_activity_on_boarding"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".HeadlinesBrowseActivity"
            android:label="@string/title_activity_headlines_browse"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>